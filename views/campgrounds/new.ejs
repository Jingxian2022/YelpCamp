<% layout('layouts/boilerplate')%>
<body></body>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <!-- make it center -->
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Please enter the title</label>
        <input class="form-control" type="text" id="title" name="campground[title]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Please enter the location</label>
        <input class="form-control" type="text" id="location" name="campground[location]">
      </div>
      <div class="mb-3">
        <label for="price">Please enter the price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00"
           aria-label="price" aria-describedby="price-label" name="campground[price]">
           <!-- 注意 aria-describedby -->
           <!-- 注意有name才能建立在db里 -->
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Please enter the image URL</label>
        <input class="form-control" type="text" id="image" name="campground[image]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
        <!-- textarea有closing，input没 -->
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add this campground</button>
      </div>
      <h3><a href="/campgrounds">All Campgrounds</a></h3>
    </form>

  </div>
</div>


</body>