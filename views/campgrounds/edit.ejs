<% layout('layouts/boilerplate')%> 

<body>
    <h1>Edit campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"> //这里要配合命令行的npm i method-override,还要配合app.js,相当于fake了一个put
        <div>
            <label for="title">Please enter the title</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title%>">
        </div>
        <div>
            <label for="location">Please enter the location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location%>">
        </div>
        <button>Save update campground</button>
        <h3><a href="/campgrounds/<%= campground._id%>">Back To Campgrounds</a></h3>
    </form>
</body>
