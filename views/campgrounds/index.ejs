<% layout('layouts/boilerplate')%>
<!-- 不用/,不用.ejs -->
<div>
  <h3><a href="/campgrounds/new">Add New Campground</a></h3>

</div>
<% for (let campground of campgrounds) {%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= campground.image %> " alt="">
    </div>
    <div class="col-md-8"> 
      <!-- 不设置4和8就不能显示row的模式 -->
      <div class="card-body">
        <div class="column">

          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <a class="btn btn-primary mb-3" href="/campgrounds/<%= campground._id %> ">View <%= campground.title %> </a>
        </div>
        <p class="card-text">
          <%= campground.description %>
        </p>
        <p>
          <small class="text-muted"><%= campground.location %> </small>
        </p>
      </div>
    </div>

  </div>
</div>
<% }%>
<!-- //不要缺/号 -->